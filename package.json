{
  "name": "vue3-vite-template",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "preinstall": "npx only-pkg pnpm",
    "lint": "npx eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "lp": "prettier {src,mock}/**/*.{html,vue,css,less,ts,md,.json} --write",
    "sl": "npx stylelint **/*{.less,.css} --fix",
    "prepare": "husky install",
    "pre-commit": "npm run lp && npm run sl && npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ng lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "pinia": "^2.0.14",
    "vue": "^3.2.25",
    "vue-router": "4"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.70",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "@vitejs/plugin-vue": "^2.3.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "only-pkg": "^0.0.1",
    "postcss-html": "^1.4.1",
    "postcss-less": "^6.0.0",
    "prettier": "2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.9.2",
    "unplugin-icons": "^0.14.7",
    "unplugin-vue-components": "^0.21.0",
    "vite": "^2.9.9",
    "vue-tsc": "^0.34.7"
  }
}
